#Navigator{

	color: white;

	h2 {
		line-height: 40px;
		padding-left: 10px;
		font-size: 14px;
	}

	ul {
		li{
			font-size: 18px;
			cursor: pointer;
			box-shadow: 0px 0px 2px black;
			font-weight: bold;
			background-image: -webkit-linear-gradient(bottom, #5D636C 4%, #6E7680 100%);
			background-image: -moz-linear-gradient(bottom, #5D636C 4%, #6E7680 100%);
			
			a{
				color:white;
				line-height: 40px;
				width:100%;
				text-decoration: none;
				display: block;
				padding-left: 40px;
				background-size: 20px 20px;
				background-repeat: no-repeat;
				background-position: 10px 50%;
			}
		}
		li:hover{
			background-color: #494949;
		}
		li.active{
			background-image: -webkit-linear-gradient(bottom, #3773b7 4%, #4e8ab7 100%);
			background-image: -moz-linear-gradient(bottom, #3773b7 4%, #4e8ab7 100%);
		}
		li.view a{
			background-image:url(imgs/list.svg);
		}
		li.upload a{
			background-image:url(imgs/upload.svg);
		}
	}

}

#UserInfo{

	.avatar{
		width:50px;
		height:50px;
		float:left;
		border-radius: 25px;
		margin-left:10px;
		background-size: 50px 50px;
		box-shadow: 0px 0px 5px #ffffff;
	}
	.realname{
		height:50px;
		line-height: 50px;
		margin-left: 20px;
		float:left;
	}
	height:70px;
	margin-top: -10px;
}