define(function(require, exports, module){
	
	var $wrapper,
		styleNode;

	function load( _$wrapper ){

		$wrapper = _$wrapper;
		
		// load less file
		b_core.loadLess( require.toUrl('./login.less'), function(_styleNode){
			styleNode = _styleNode;
		} );
		b_core.loadTemplate( require.toUrl('./login.html'), function(tpl){
			$wrapper.html( tpl );
		} )
	}

	function unload(){
		if( styleNode ){
			$(styleNode).remove();
		}
		if( $wrapper ){
			$wrapper.remove();
		}
	}
	exports.load = load;
	exports.unload = unload;
})